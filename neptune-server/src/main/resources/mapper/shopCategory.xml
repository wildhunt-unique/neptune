        </foreach>
    </select>
    <select id="listAll" resultMap="FullMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
    </select>
    <select id="listCriteria" parameterType="java.util.Map" resultMap="FullMap">SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE TRUE
